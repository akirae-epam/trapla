<% provide(:title, "プランの編集") %>
<%= render 'plans/plan_form', plan_detail_form_button: 'プラン概要を変更する' %>

<script type="text/javascript">
  $(function() {

    //マウスを乗せたら色が変わる
    $('.plan_detail').hover(function() {
      $(this).css('background-color', 'rgba(100, 100, 100, 0.5)');
    }, function() { //マウスを離したら色が戻る
      $(this).css('background-color', '');
    });

    $('.plan_detail').on('click', function() {
      $(this).css('display', 'none');
    });

  });
</script>
