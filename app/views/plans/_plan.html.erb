<li id="plan-<%= plan.id %>" class = "plan_list well">
  <div class="plan_user">
    <div class="user_img">
      <%= render 'shared/user_image', user: plan.user %>
    </div>
    <p class="user"><%= link_to plan.user.name, plan.user %></p>
  </div>
  <div class="plan_overview">
    <h2 class="plan_title"><%= plan.title %></h2>
    <p class="plan_content"><%= plan.content %></p>
    <small class="timestamp">
      Created <%= time_ago_in_words(plan.created_at) %> ago.
    </small>
    <% if current_user == plan.user %>
      <%= link_to 'プランを編集する', edit_plan_path(plan) %>
    <% end %>
  </div>
</li>
