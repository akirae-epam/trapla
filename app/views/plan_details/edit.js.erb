  // 最初に配列を初期化し配列に格納
  var item_outputs = new Array();
  var item_moneys = new Array();
  var item_outputs = $('#payments_output_item li');
  var item_moneys = $('#payments_output_money li');

  // テキストボックスの値を取得
  var input_item = $('#plan_detail_payment_item').val();
  var input_money = $('#plan_detail_payment_money').val();

  $('#payments_output_item').append('<li>'+input_item+'</li>');
