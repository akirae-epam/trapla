<% provide(:title, @user.name) %>
<div class="user_gawa">
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">User Infomation</div>
        <div class="panel-body">

            <div class="user_img">
              プロフィール画像
            </div>
            <div class="user_infomation">
              <div class="user_name">Account name : <%= @user.name %></div>
              <div class="user_email">Email Address : <%= @user.email %></div>
              <% if current_user == @user %>
                <%= link_to 'Edit account', edit_user_path(@user) %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="plan_gawa">
  <div class="panel panel-default">
    <% if @user.plans.any? %>
      <h3>Plans (<%= @user.plans.count %>)</h3>
      <%= will_paginate @plans %>
      <ol class="plans">
        <%= render @plans %>
      </ol>
      <%= will_paginate @plans %>
    <% end %>
  </div>
</div>
