<% provide(:title, "Edit "+@user.name+" infomation") %>
<div class="user_gawa">
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">Edit user infomation</div>
        <div class="panel-body">
            <%= form_for(@user) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <%= f.label :name, class:"info" %>
              <%= f.text_field :name, class: 'form-control' %>

              <%= f.label :email, class:"info" %>
              <%= f.email_field :email, class: 'form-control' %>

              <%= f.label :password, class:"info" %>
              <%= f.password_field :password, class: 'form-control' %>

              <%= f.label :password_confirmation, class:"info" %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>

              <%= f.submit "Edit account", class: "btn btn-primary" %>

              <%= link_to "Cancel", @user, class: "btn btn-primary" %>
              <% if current_user == @user %>
                <%= link_to "Delete Account", user_path,
                                                   method: :delete,
                                                   class: 'delete_user',
                                                   data: { confirm: "本当に削除しますか？"} %>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
