<div class="panel panel-default">
  <div class="panel-heading">プロフィール</div>
    <div class="panel-body">
        <div class="user-img">
          <%= render 'shared/user_image', user: @user %>
        </div>
        <div class="user-information">
          <div class="user-name">アカウント名 : <%= @user.name %></div>
          <% if current_user == @user %>
            <%= link_to 'プロフィール設定', edit_user_path(@user) %>
          <% end %>
        </div>
    </div>
  </div>
</div>
