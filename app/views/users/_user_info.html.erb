<div class="user_gawa">
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">プロフィール</div>
        <div class="panel-body">
            <div class="user_img">
              <%= render 'shared/user_image', user: @user %>
            </div>
            <div class="user_infomation">
              <div class="user_name">アカウント名 : <%= @user.name %></div>
              <% if current_user == @user %>
                <%= link_to 'プロフィールを編集する', edit_user_path(@user) %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
